.modal-header
	h2 Parse Series
.modal-body
	.container-fluid
		.row
			div(ng-class='ps.getWidthClass()')
				form.form-horizontal
					md-input-container
						label Series Name: 
						input(ng-model="ps.issues.Title")

					md-input-container
						label Volume:
						input(type="text", ng-model="ps.issues.Volume")

					md-input-container
						label Volume Type:
						input(type="text", ng-model="ps.issues.VolumeType")

					md-input-container
						label First Issue:
						input(type="text", ng-model="ps.issues.First")

					md-input-container
						label Last Issue:
						input(type="text", ng-model="ps.issues.Last")

					.form-group
						label Start Date:
						.row
							.col-md-6
								select.form-control(ng-options='opt for opt in ps.Months track by opt', ng-model='ps.StartMonth')
							.col-md-6
								select.form-control(ng-options='opt for opt in ps.Years track by opt', ng-model='ps.StartYear')

					.form-group
						label End Date:
						.row
							.col-md-6
								select.form-control(ng-options='opt for opt in ps.Months track by opt', ng-model='ps.EndMonth')
							.col-md-6
								select.form-control(ng-options='opt for opt in ps.Years track by opt', ng-model='ps.EndYear')
			
			.col-md-6(ng-if='ps.publication !== null')
				div
					h4 {{ps.publication.Title}}
				div
					label Series: 
					span {{ps.publication.Series}}
				div
					label Issues: 
					span {{ps.publication.Issues}}
				div
					label Dates: 
					span {{ps.publication.Dates}}
				div
					label Notes: 
					span {{ps.publication.Notes}}

.modal-footer
	button.btn.btn-default(ng-click="ps.cancel()") Cancel
	button.btn.btn-primary(ng-click="ps.parse()") Parse