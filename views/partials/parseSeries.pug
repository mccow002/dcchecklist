md-dialog(flex='40%')
	form(name='form')
		md-toolbar
			.md-toolbar-tools
				h2 Parse Series
		md-dialog-content
			.container-fluid.md-dialog-content
				.row
					div(ng-class='ps.getWidthClass()')
						form.form-horizontal
							md-input-container.md-block
								label Series Name: 
								input(ng-model="ps.issues.Title", name='Title', required)
								div(ng-messages='form.Title.$error')
									div(ng-message='required') Series Name is required!

							md-input-container.md-block
								label Volume:
								input(type="text", ng-model="ps.issues.Volume")

							md-input-container.md-block
								label Volume Type:
								input(type="text", ng-model="ps.issues.VolumeType")

							md-input-container.md-block
								label First Issue:
								input(type="text", ng-model="ps.issues.First")

							md-input-container.md-block
								label Last Issue:
								input(type="text", ng-model="ps.issues.Last")

							.row
								.col-md-6
									md-input-container.md-block
										label Start Month:
										md-select(ng-model='ps.StartMonth')
											md-option(ng-repeat='month in ps.Months', ng-value='month') {{month}}
								.col-md-6
									md-input-container.md-block
										label Start Year:
										md-select(ng-model='ps.StartYear')
											md-option(ng-repeat='year in ps.Years', ng-value='year') {{year}}					

							.row
								.col-md-6
									md-input-container.md-block
										label End Month:
										md-select(ng-model='ps.EndMonth')
											md-option(ng-repeat='month in ps.Months', ng-value='month') {{month}}
								.col-md-6
									md-input-container.md-block
										label End Year:
										md-select(ng-model='ps.EndYear')
											md-option(ng-repeat='year in ps.Years', ng-value='year') {{year}}
					
					.col-md-6(ng-if='ps.publication !== null')
						div
							h4 {{ps.publication.Title}}
						div
							label Series: 
							span {{ps.publication.Series}}
						div
							label Issues: 
							span {{ps.publication.Issues}}
						div
							label Dates: 
							span {{ps.publication.Dates}}
						div
							label Notes: 
							span {{ps.publication.Notes}}

			md-dialog-actions(layout='row')
				md-button.md-raised(ng-click="ps.cancel()") Cancel
				md-button.md-raised.md-primary(type='submit', ng-click="ps.parse()") Parse