.div(ng-controller='seriesDetailsCtrl as sr')
    md-content
        md-toolbar.md-hue-2
            .md-toolbar-tools
                div(layout='column')
                    .md-headline(flex) {{sr.Series.Name}}
                    .md-subhead(flex) Dates: {{sr.Series.StartDate | date: 'MM/yyyy'}} - {{sr.Series.EndDate | date: 'MM/yyyy'}}
                span(flex)
                .btn-group
                    a.btn.btn-primary(ng-click='sr.linkSeries()', md-ink-ripple)
                        i.fa.fa-link.fa-fw
                    a.btn.btn-danger(ng-click='sr.deleteSeries($event)', md-ink-ripple)
                        i.fa.fa-trash-o.fa-fw

    section(layout='row', flex)
        md-sidenav.md-sidenav-left(md-component-id="left", md-is-locked-open="$mdMedia('gt-md')", md-whiteframe="4")
           md-content
                //- ul.nav.nav-pills.nav-stacked
                //-     li(ng-repeat='issue in sr.Series.Issues', ui-sref-active='active', md-ink-ripple)
                //-         a(ui-sref='.Issue({issueId: issue._id})') 
                //-             span {{sr.Series.Name}} - {{issue.Number}}
                //-             i.fa.fa-link.fa-fw.pull-right(ng-if='issue.FilePath !== undefined')
                md-list
                    md-list-item(ng-click='sr.goToIssue()', ng-class='sr.getActive(issue._id)', ng-repeat='issue in sr.Series.Issues', ui-sref='.Issue({issueId: issue._id})')
                        p {{sr.Series.Name}} - {{issue.Number}}
                        i.fa.fa-link.fa-fw.pull-right(ng-if='issue.FilePath !== undefined')

        md-content(flex)
            ui-view

